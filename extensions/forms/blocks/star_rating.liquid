{% comment %} extensions/form-block/blocks/form_embed.liquid {% endcomment %}

<div 
  id="formify-container" 
  data-form-id="{{ block.settings.form_id }}"
  style="margin: 20px 0;"
>
  <div id="formify-app">
    <p>Loading form...</p>
  </div>
</div>

<script src="{{ 'form-renderer.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Formify Embed",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "form_id",
      "label": "Form ID",
      "info": "Copy the ID from your Formify App Dashboard"
    },
    {
      "type": "header",
      "content": "Appearance"
    }
  ]
}
{% endschema %}